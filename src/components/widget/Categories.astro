---
import { getCategoryList } from "../../utils/content-utils.ts";
import ButtonLink from "../control/ButtonLink.astro";
import WidgetLayout from "./WidgetLayout.astro";

const tags = await getCategoryList();

const COLLAPSED_HEIGHT = "7.5rem";
const COLLAPSE_THRESHOLD = 5;

const isCollapsed = tags.length >= COLLAPSE_THRESHOLD;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---

<WidgetLayout name="Categories" id="categories" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT}
                class={className} style={style}
>
    {tags.map((tag) =>
        (<ButtonLink
            url={tag.url}
            badge={String(tag.count)}
            label={`View all posts with the category ${tag.name.trim()}`}
        >
            {tag.name.trim()}
        </ButtonLink>)
    )}
</WidgetLayout>